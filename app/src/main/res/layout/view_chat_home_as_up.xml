<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@drawable/chat_home_as_up_ripple"
    android:layout_marginLeft="@dimen/home_as_up_marginLeft"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/left_arrow_icon" />

    <TextView
        android:id="@+id/roomNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_room_name_marginLeft"
        android:layout_marginRight="@dimen/chat_room_name_text_marginRight"

        android:text="김성근"
        android:textColor="@color/text_color"
        android:textSize="@dimen/chat_room_text_size" />

    <TextView
        android:id="@+id/peopleCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="1"
        android:textColor="@color/chat_people_count_text"
        android:textSize="@dimen/chat_room_text_size" />

</LinearLayout>